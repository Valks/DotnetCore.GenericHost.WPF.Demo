<Window x:Class="Demo.DI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.DI.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=CounterService.Counter}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" />
    </Grid>
</Window>
